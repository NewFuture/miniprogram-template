{
    "name": "miniprogram-template",
    "version": "0.0.1",
    "description": "Mini Program Template Projects",
    "main": "dist/app.js",
    "scripts": {
        "clean": "miniprogram-build clean",
        "dev": "miniprogram-build --config env/int.jsonc",
        "dev:int": "miniprogram-build --config env/int.jsonc",
        "dev:edog": "miniprogram-build --config env/edog.jsonc",
        "dev:prod": "miniprogram-build --config env/prod.jsonc",
        "watch": "miniprogram-build watch -c env/int.jsonc",
        "watch:int": "miniprogram-build watch -c env/int.jsonc",
        "watch:edog": "miniprogram-build watch -c env/edog.jsonc",
        "watch:prod": "miniprogram-build watch -c env/prod.jsonc",
        "build": "miniprogram-build build -c env/edog.jsonc",
        "build:int": "miniprogram-build build -c env/int.jsonc",
        "build:edog": "miniprogram-build build -c env/edog.jsonc",
        "build:prod": "miniprogram-build build -c env/prod.jsonc",
        "release": "miniprogram-build clean build -c env/edog.jsonc --release",
        "release:int": "miniprogram-build clean build -c env/int.jsonc --release",
        "release:edog": "miniprogram-build clean build -c env/edog.jsonc --release",
        "release:prod": "miniprogram-build clean build -c env/prod.jsonc --release",
        "fix": "npm run lint-fix:js && npm run lint-fix:wxss && npm run prettier-fix",
        "prettier": "prettier src/**/* --check",
        "prettier-fix": "prettier src/**/* --write",
        "lint": "npm run lint:js && npm run lint:wxss && npm run lint:wxml && npm run prettier",
        "lint:js": "eslint src/**/*.{ts,js,wxs}",
        "lint:wxss": "stylelint src/**/*.{scss,sass,css,wxss}",
        "lint:wxml": "htmlhint src/**/*.{wxml,html}",
        "lint-fix": "npm run lint-fix:wxss && npm run lint-fix:js && npm run lint-fix:wxml",
        "lint-fix:js": "eslint src/**/*.{ts,js,wxs} --fix",
        "lint-fix:wxml": "htmlhint src/**/*.{wxml,html}",
        "lint-fix:wxss": "stylelint src/**/*.{scss,sass,css,wxss} --fix",
        "help": "miniprogram-build -h",
        "stylelint-check": "stylelint-config-prettier-check",
        "eslint-check": "eslint --print-config . | eslint-config-prettier-check",
        "test": "npm run lint && npm run build"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/NewFuture/miniprogram-template.git"
    },
    "author": "NewFuture",
    "license": "UNLICENSED",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^1.4.0",
        "@typescript-eslint/parser": "^1.4.0",
        "eslint": "^5.14.1",
        "eslint-config-prettier": "^4.0.0",
        "eslint-plugin-prettier": "^3.0.1",
        "htmlhint": "^0.10.1",
        "miniprogram-api-typings": "latest",
        "miniprogram-build": "^3.3.11",
        "prettier": "^1.16.4",
        "stylelint": "^9.10.1",
        "stylelint-config-prettier": "^4.0.0",
        "stylelint-config-recommended-scss": "^3.2.0",
        "stylelint-prettier": "^1.0.6",
        "stylelint-scss": "^3.5.3",
        "typescript": "^3.3.3333"
    }
}
